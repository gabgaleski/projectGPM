{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend ",
  "main": "src/server.ts",
  "scripts": {
    "start": "ts-node src/server.ts",
    "dev": "nodemon --watch \"./src/**\" --ext \"ts,js\" --ignore \"src/**/*.spec.ts,src/**/*.json\" --exec \"ts-node src/server.ts\"",
    "test": "mocha -r ts-node/register ./tests/**/*$NAME*.{test,spec}.ts -t 10000 --exit",
    "build": "npx -y tsc",
    "db:start": "npx sequelize-cli db:migrate && npx sequelize-cli db:seed:all"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jest": "^29.7.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.35.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/chai": "^4.3.11",
    "@types/chai-http": "^4.2.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.5",
    "@types/sequelize": "^4.28.19",
    "@types/sinon": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "chai": "^5.0.3",
    "chai-http": "^4.4.0",
    "eslint": "^8.56.0",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.2",
    "sequelize-cli": "^6.6.2",
    "sinon": "^17.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
